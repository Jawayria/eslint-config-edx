{
    "env": {
        "amd": true,
        "browser": true,
        "es6": true,
        "jasmine": true,
        "jquery": true
    },
    "extends": "airbnb",
    "parserOptions": {
        "ecmaVersion": 8,
        "ecmaFeatures": {
          "jsx": true
        }
    },
    "plugins": [
        "dollar-sign"
    ],
    "rules": {
        "class-methods-use-this": "off",
        "curly": ["error", "all"],
        "dollar-sign/dollar-sign": ["error", "ignoreProperties"],
        "max-len": [
          "error",
          120,
          2,
          {
            "ignoreUrls": true,
            "ignoreComments": false,
            "ignoreRegExpLiterals": true,
            "ignoreStrings": true,
            "ignoreTemplateLiterals": true
          }
        ],
        "strict": "off"
    }
}
